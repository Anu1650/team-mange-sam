{
  "name": "casablanca-ai",
  "version": "1.0.0",
  "description": "ERP Software by Sam's Zerobytes Corporation",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir"
  },
  "keywords": ["erp", "ai", "chat", "video-meeting"],
  "author": "Sam's Zerobytes Corporation",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.zerobytes.casablanca",
    "productName": "Casablanca AI",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  }
}
